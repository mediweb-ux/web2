{
	"name": "mediweb-svelte",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"packageManager": "pnpm@10.24.0",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"start": "serve build -s -l 3000",
		"build:analyze": "vite build --mode analyze",
		"build:production": "npm run clean && cross-env NODE_ENV=production BUILD_TARGET=production vite build",
		"build:production:full": "npm run clean && npm run check && npm run test:run && npm run lint && cross-env NODE_ENV=production BUILD_TARGET=production vite build",
		"build:staging": "npm run clean && npm run check && npm run test:run && npm run lint && cross-env NODE_ENV=production BUILD_TARGET=staging vite build",
		"build:preview": "npm run build && vite preview",
		"clean": "rimraf build .svelte-kit",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"test:run": "vitest run",
		"test:ui": "vitest --ui",
		"test:performance": "vitest run src/lib/utils/performance.test.ts src/lib/utils/preload.test.ts",
		"test:accessibility": "vitest run src/lib/components/accessibility/",
		"test:a11y": "npm run test:accessibility",
		"verify:deployment": "node scripts/verify-deployment.js",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"deploy:staging": "npm run build:staging && echo 'Deploy staging build to your hosting provider'",
		"deploy:production": "npm run build:production && echo 'Deploy production build to your hosting provider'",
		"size-check": "npm run build && npx bundlesize",
		"test:build": "npm run build && node scripts/test-build.js",
		"test:build:production": "npm run build:production && node scripts/test-build.js"
	},
	"devDependencies": {
		"@axe-core/playwright": "^4.10.2",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-static": "^3.0.9",
		"@sveltejs/kit": "^2.36.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.4",
		"@tailwindcss/postcss": "4.1.17",
		"@tailwindcss/typography": "^0.5.19",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/svelte": "^5.2.8",
		"@types/node": "^24.3.1",
		"@typescript-eslint/eslint-plugin": "^8.40.0",
		"@typescript-eslint/parser": "^8.40.0",
		"@vitest/ui": "^3.2.4",
		"autoprefixer": "^10.4.21",
		"axe-core": "^4.10.3",
		"cross-env": "^10.0.0",
		"dotenv": "^17.2.3",
		"eslint": "^9.34.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-svelte": "^3.11.0",
		"jest-axe": "^10.0.0",
		"jsdom": "^26.1.0",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"rimraf": "^6.0.1",
		"svelte": "^5.38.7",
		"svelte-check": "^4.0.0",
		"svelte-eslint-parser": "^1.3.1",
		"tailwindcss": "4.1.17",
		"typescript": "^5.0.0",
		"vite": "^5.4.8",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"heroicons": "^2.2.0",
		"resend": "^6.1.2",
		"serve": "^14.2.3"
	}
}
